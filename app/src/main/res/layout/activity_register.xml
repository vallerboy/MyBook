<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.oskarpolak.mybook.RegisterActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Login"
        android:layout_marginTop="27dp"
        android:id="@+id/registerLogin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="20dp" />

    <Button
        android:text="Zarejestruj!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRegister"
        android:layout_below="@+id/registerPhone"
        android:layout_alignStart="@+id/registerPhone"
        android:layout_alignEnd="@+id/registerPhone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Hasło"
        android:id="@+id/registerPassword"
        android:layout_below="@+id/registerLogin"
        android:layout_alignStart="@+id/registerLogin"
        android:layout_alignParentEnd="true"
        android:paddingBottom="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Powtórz hasło"
        android:id="@+id/registerPasswordAgain"
        android:layout_below="@+id/registerPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:hint="Numer telefonu"
        android:id="@+id/registerPhone"
        android:layout_below="@+id/registerPasswordAgain"
        android:layout_alignStart="@+id/registerPasswordAgain"
        android:layout_alignParentEnd="true"
        android:paddingBottom="20dp"/>
</RelativeLayout>
