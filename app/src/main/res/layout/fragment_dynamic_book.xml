<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    tools:context="pl.oskarpolak.mybook.fragments.DynamicBookFragment">


    <TextView
        android:text="Tytuł"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textSize="40sp"
        android:gravity="center"
        android:id="@+id/dynamicTitle" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dynamicDesc"
        android:layout_below="@+id/dynamicTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dynamicDesc"
        android:layout_marginTop="159dp"
        android:textSize="20sp"
        android:id="@+id/dynamicAuthor"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignTop="@+id/dynamicAuthor"
        android:id="@+id/dynamicPages" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:id="@+id/dynamicImage"
        android:layout_below="@+id/dynamicDesc"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="46dp" />

    <Button
        android:text="Wypożycz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dynamicImage"
        android:layout_alignStart="@+id/dynamicTitle"
        android:layout_marginTop="56dp"
        android:id="@+id/buttonRent" />
</RelativeLayout>
